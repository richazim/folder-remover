{
  "name": "folderremover",
  "displayName": "Auto Folder Remover",
  "description": "Automatically remove unnecessary folders (node_modules, dist, build, ...) from VS Code projects after vscode is closed.",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.107.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "folderremover.trackUntracked",
        "title": "Auto Folder Remover: Track untracked folder uri(s)"
      },
      {
        "command": "folderremover.removeAllTrackedFolders",
        "title": "Auto Folder Remover: Remove unnecessary folders right now"
      },
      {
        "command": "folderremover.configureFolderToTrack",
        "title": "Auto Folder Remover: Configure Folder(s) to track"
      },
      {
        "command": "folderremover.trackedList",
        "title": "Auto Folder Remover: List all the tracked folder uri"
      },
      {
        "command": "folderremover.untrackAll",
        "title": "Auto Folder Remover: Clean all the tracked folder uris"
      },
      {
        "command": "folderremover.author",
        "title": "Auto Folder Remover: Author information"
      }
    ],
    "configuration": {
      "title": "Auto Folder Remover",
      "properties": {
        "folderremover.foldersToTrack": {
          "type": "array",
          "default": ["node_modules", "dist", ".next"],
          "description": "List of folder(s) to track and auto delete after"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/richazim/folder-remover.git"
  },
  "homepage": "https://github.com/richazim/folder-remover/blob/main/README.md",
  "pricing": "Free",
  "author": {
    "name": "Azim SAIBOU"
  },
  "publisher": "SAZ",
  "icon": "./images/icon.png",
  "dependencies": {
    "pretty-error": "^4.0.0"
  },
  "keywords": ["remove", "clean", "package", "node_modules", "dist", ".next", "build", "folder"]
}
